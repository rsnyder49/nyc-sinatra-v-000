<h1>Edit Figure</h2>
   <form action="/figures/<%=@figure.id%>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="patch">
     <label for "name">Name:</label>
      <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
     <br></br>
     <h3>Edit Title </h3>
    <% Title.all.each do |title| %>
    <ul><label><%=title.name%></label>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.name%>"
      <%= 'checked' if @figure.titles.include?(title)%>></ul>
    <% end %>
     <label>Add New Title:</label>
    <input type='text' name="title[name]" id="new_title">
     <h3>Edit Landmark</h3>
    <%Landmark.all.each do |landmark|%>
    <ul><label type='checkbox' name="figure[landmark][]" value='<%=landmark.id%>'id="<%=landmark.name%>"
        <%= 'checked' if @figure.landmarks.include?("landmark")%>></ul>
    <% end %>
    <label>Add New Landmark:</label>
    <input type='text' name="landmark[name]" id="new_landmark">
    <input type="submit" value="Edit Figure">
   </form>